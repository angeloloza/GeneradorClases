<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.mx.vise</groupId>
	<artifactId>reverseIngeopenjpa</artifactId>
	<packaging>war</packaging>
	<version>0.0.3-SNAPSHOT</version>
	<name>reverseIngeopenjpa Maven Webapp</name>
	<url>http://maven.apache.org</url>
	<properties>
		<postgresql.version>9.2-1003-jdbc4</postgresql.version>
		<scm.username>eclipsesvn</scm.username>
		<scm.password>byce2015#</scm.password>
	</properties>
	<scm>
		<connection>scm:svn:http://svn.vise.com.mx/svn/reverseIngeopenjpa/trunk/reverseIngeopenjpa</connection>
		<developerConnection>scm:svn:http://svn.vise.com.mx/svn/reverseIngeopenjpa/trunk/reverseIngeopenjpa</developerConnection>
		<url>http://svn.vise.com.mx/svn/reverseIngeopenjpa/trunk/reverseIngeopenjpa</url>
	</scm>
	<distributionManagement>
		<!-- use the following if you're not using a release version. -->
		<repository>
			<id>deployment</id>
			<name>Repositorio de producci√≥n </name>
			<url>http://nexus.vise.com.mx/repository/maven-releases/</url>
		</repository>
		<!-- use the following if you ARE using a snapshot version. -->
		<snapshotRepository>
			<id>deployment</id>
			<name>Repositorio de desarrollo </name>
			<url>http://nexus.vise.com.mx/repository/maven-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>5.1.24</version>
		</dependency>
		<dependency>
			<groupId>org.apache.openjpa</groupId>
			<artifactId>openjpa</artifactId>
			<version>2.4.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.geronimo.specs</groupId>
			<artifactId>geronimo-validation_1.0_spec</artifactId>
			<version>1.1</version>
		</dependency>
		<dependency>
			<groupId>org.postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<version>${postgresql.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jtds</groupId>
			<artifactId>jtds</artifactId>
			<version>1.3.1</version>
		</dependency>
	</dependencies>
	<build>
		<finalName>reverseIngeopenjpa</finalName>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>exec-maven-plugin</artifactId>
					<version>1.2.1</version>
					<configuration>
						<mainClass>org.apache.openjpa.jdbc.meta.ReverseMappingTool</mainClass>
						<arguments>
							<argument>-directory</argument>
							<argument>src/main/java</argument> <!-- or target/generated/model -->
							<argument>-accessType</argument>
							<argument>fields</argument>
							<argument>-useGenericCollections</argument>
							<argument>true</argument>
							<argument>-package</argument>
							<argument>com.mx.cominvi</argument>
							<argument>-innerIdentityClasses</argument>
							<argument>false</argument>
							<argument>-useBuiltinIdentityClass</argument>
							<argument>false</argument>
							<argument>-primaryKeyOnJoin</argument>
							<argument>false</argument>
							<argument>-annotations</argument>
							<argument>true</argument>
							<argument>-p</argument>
							<argument>src/main/resources/META-INF/reverse-persistence.xml</argument>
							<argument>-cp</argument>
							<argument>src/main/resources/META-INF/custom.properties</argument>
						</arguments>
					</configuration>
				</plugin>
					<plugin>
						<artifactId>maven-release-plugin</artifactId>
						<configuration>
							<useReleaseProfile>false</useReleaseProfile>
							<preparationGoals>clean install</preparationGoals>
							<username>${scm.username}</username>
							<password>${scm.password}</password>
							<tagBase>
								http://svn.vise.com.mx/svn/reverseIngeopenjpa/tags
							</tagBase>
						</configuration>
					</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
